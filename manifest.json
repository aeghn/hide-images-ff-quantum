{
  "description": "Hides all images on webpage",
  "manifest_version": 2,
  "name": "hide-images",
  "version": "1.3",
  
  
  "icons": {
    "48": "icons/block-48.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/block-disabled-48.png",
    "default_title": "Images are NOT hidden (Click to hide)",
    "browser_style": true
  },
  
  "permissions": [
    "activeTab",
    "tabs",
	"<all_urls>"
  ]

}
